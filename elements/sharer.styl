.Sharer-list
	display: flex
	justify-content: center
	background: #fff
	border-radius: $borderRadius['md']
	padding: 5px 15px
	&>.item
		position: relative
		z-index: 1
		margin-left: 10px
		cursor: pointer
		border-radius: 50%
		transition: all 0.15s ease-in-out
		&:first-child
			margin-left: 0
		&:hover
			transform: translateY(-3px)
			.Sharer-qrcode
				visibility: visible
				opacity: 1
		b
			display: block
			width: 30px
			height: 30px
			background: no-repeat url('/file/images/public/sharer.png')
			background-size: 240px 30px
		&[data-type="qq"] b
			background-position: 0 0
		&[data-type="qzone"] b
			background-position: -30px 0
		&[data-type="wechat"] b
			background-position: -60px 0
		&[data-type="pengyouquan"] b
			background-position: -90px 0
		&[data-type="weibo"] b
			background-position: -120px 0
		&[data-type="link"] b
			background-position: -150px 0

.Sharer-qrcode
	visibility: hidden
	position: absolute
	top: 100%
	left: 50%
	margin-top: 20px
	margin-left: -75px
	width: 150px
	padding: 10px 15px 15px
	background: #fff
	opacity: 0
	border-radius: $borderRadius['md']
	box-shadow: 0 2px 2px rgba(0,0,0,0.1)
	transition: all 0.3s ease-in-out
	&:before
		position: absolute
		content: ""
		top: -20px
		left: 50%
		margin-left: -10px
		border: 10px solid transparent
		border-bottom-color: #fff
	div
		font-size: 14px
		color: $color_gray_6
		padding-bottom: 10px
		text-align: center
