*, *:before, *:after
	box-sizing: border-box

html
	height: 100%
	min-height: 100%
	color: $color_gray_9
	font-size: 14px
	font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
	line-height: 1.5
	font-weight: 400
	text-size-adjust: 100%

body
	margin: 0
	min-height: 100%
	background-color: $color_white
	// -webkit-font-smoothing: antialiased
	// -moz-font-smoothing: antialiased
	word-break: break-all  //todo: 可能会有问题

article, aside, footer, header, main, menu, nav, section, blockquote, figcaption
	display: block

h1, h2, h3, h4, .h1, .h2, .h3, .h4
	font-weight: 500
	margin-top: 0
	margin-bottom: 0
	
h1, .h1
	font-size: 26px
h2, .h2
	font-size: 22px
h3, .h3
	font-size: 18px
h4, .h4
	font-size: 16px

p
	margin-top: 0
	margin-bottom: 0

hr, .hr
	margin: 1rem 0
	color: inherit
	border: none
	border-top: 1px solid $borderColor['common']
	height: 1px
	overflow: hidden
	&.hr-dashed
		border-top-style: dashed
	
abbr[title]
	cursor: help
	border-bottom: none
	text-decoration: underline
	text-decoration: underline dotted
	text-decoration-skip-ink: none
	
address
	font-style: normal
	line-height: inherit

ol, ul
	list-style: none
	padding-left: 0

ol, ul, dl
	margin-top: 0
	margin-bottom: 0

ol ol, ul ul, ol ul, ul ol
	margin-bottom: 0

dt
	font-weight: 500

dd
	margin-bottom: 0
	margin-left: 0

blockquote
	margin: 0

b, strong
	font-weight: inherit
	font-weight: 700
	
small
	font-size: 0.8em

sub, sup
	position: relative
	font-size: 0.75em
	line-height: 0
	vertical-align: baseline

sub
	bottom: -0.25em

sup
	top: -0.5em

a
	color: $color_blue_4
	text-decoration: none
	background-color: transparent
	cursor: pointer
	vertical-align: bottom
	&:hover
		text-decoration: underline
		outline: none
	&:active
		outline: none
	&:focus
		text-decoration: none

figure
	margin: 0 auto
	figcaption
		text-align: center

img
	display: block
	vertical-align: top
	max-width: 100%
	border: 0

svg
	display: block
	vertical-align: top
	overflow: hidden
	max-width: 100%
	&:not(:root)
		overflow: hidden

table
	width: 100%
	border: 0
	border-collapse: collapse
	border-spacing: 0

table caption
	padding: 0.5rem 0
	color: $color_gray_6
	caption-side: bottom

th, td
	text-align: inherit
	border: 1px solid $borderColor['common']
	padding: 5px 8px
	
th
	background: darken($color_gray_1, 3%)
	
td
	color: $color_gray_6
	
tr
	&:hover
		td
			background: $color_gray_1

label
	display: inline-block
	vertical-align: middle

audio
	display: inline-block
	&:not([controls])
		display: none
		height: 0

progress, video
	display: block
	width: 100%
	
canvas
	display: block

template, noscript
	display: none!important

mark
	padding: 0.125em 0.25em
	color: inherit
	background-color: yellow
	border-radius: 0.25em

pre
	display: block
	margin-top: 0
	margin-bottom: 0
	overflow: auto

pre, code, kbd, samp
	font-family: SFMono-Regular,Menlo,Monaco,Consolas,"Liberation Mono","Courier New",monospace

code
	font-size: inherit
	color: $color_pink_5
	word-wrap: break-word

pre code
	font-size: inherit
	color: inherit
	word-break: normal

kbd
	padding: 0.2em 0.4em
	color: $color_white
	background-color: $color_gray_5
	border-radius: 0.25em
	font-weight: 700
	font-size: inherit

kbd kbd
	padding: 0

input, select
	height: calc(1.5em + 0.25em + 2px)

input, button, select, optgroup, textarea
	vertical-align: top
	border: 1px solid $borderColor['form']
	outline: none
	margin: 0
	padding: 0.125em 0.375em
	border-radius: $borderRadius['sm']
	font-family: inherit
	line-height: inherit
	color: inherit
	font-size: inherit
	background: #fff no-repeat
	
input, select, textarea
	box-shadow: $shadows['control']

[type="radio"], [type="checkbox"]
	vertical-align: middle
	display: inline-block
	padding: 0
	position: relative
	top: -0.1rem
	border: 1px solid $color_gray_4
	box-shadow: none
	
[type="radio"]
	border-radius: 50%

textarea
	resize: vertical
	overflow: auto

button, [type="button"], [type="reset"], [type="submit"]
	height: auto
	appearance: button
	cursor: pointer
	box-shadow: none

button, select
	text-transform: none

select, .select
	select()
	word-wrap: normal
	background-color: $color_white
	appearance: none
	
button, input
	overflow: visible
	resize: none

input::placeholder, textarea::placeholder, select::placeholder, .placeholder
	color: inherit
	opacity: 0.6
	font-family: inherit
	font-weight: inherit
	user-select: none
	
input:focus::placeholder, textarea:focus::placeholder, select:focus::placeholder, .placeholder:focus
	opacity: 0.3

::-webkit-file-upload-button
	font: inherit
	appearance: button

::-webkit-contacts-auto-fill-button
	visibility: hidden
	pointer-events: none
	opacity: 0
	
[type="number"]
	-moz-appearance: textfield
	
[type="number"]::-webkit-inner-spin-button, [type="number"]::-webkit-outer-spin-button
	height: auto
	appearance: none
	
[type="search"]
	appearance: textfield
	outline-offset: -2px
	&::-webkit-search-cancel-button, &::-webkit-search-decoration
		appearance: none

button:-moz-focusring, [type="button"]:-moz-focusring, [type="reset"]:-moz-focusring, [type="submit"]:-moz-focusring
	outline: 1px dotted ButtonText

button::-moz-focus-inner, [type="button"]::-moz-focus-inner, [type="reset"]::-moz-focus-inner, [type="submit"]::-moz-focus-inner
	border-style: none
	padding: 0
	
button, html [type="button"], [type="reset"], [type="submit"]
	appearance: button
