.control
	height: 40px
	line-height: 22px
	padding: 8px
	background-color: darken($color_gray_1, 3%)
	border: 1px solid transparent
	border-radius: $borderRadius['sm']
	box-shadow: none
	&:focus, &-focus
		border-color: $color_blue_4
		box-shadow: 0 0 0 1px $color_blue_4
		background-color: #fff
	&.sm
		height: 32px
		font-size: 13px
		line-height: 20px
		padding: 5px 5px
	&.lg
		height: 52px
		font-size: 16px
		line-height: 26px
		padding: 12px

[type="radio"].control, [type="checkbox"].control, [type="radio"].control-sm, [type="checkbox"].control-sm
	height: auto
	padding: 0
	&:focus
		outline: none

textarea
	&.control
		min-height: calc(1.5em * 4 + 10px + 2px)
		text-align: justify
		&.control-sm
			min-height: calc(1.5em * 3 + 6px + 2px)

select.control[multiple], select.control-sm[multiple]
	height: auto
	
select.control, .select.control
	background-position: right 8px center
	padding-right: 24px
	&-sm
		background-position: right 5px center
		padding-right: 18px
	&-lg
		background-position: right 12px center
		padding-right: 32px

label.control
	background: none
	border-color: transparent
	user-select: none
	&-sm
		height: auto
		line-height: 26px
		padding: 0
	&-lg
		height: auto
		line-height: 40px
		padding: 0
	
