/* 表单行样式
==================================================== */
$control_height = 40px

.Form-rows
	&>.Form-row:last-child
		margin-bottom: 0
.Form-row
	position: relative
	display: flex
	margin-bottom: 20px
	&.is-require
		.Form-row-field:before
			content: "＊"
			display: inline-block
			position: relative
			left: -3px
			font-size: inherit
			color: $color_red_5
			user-select: none
			font-weight: bold
	&-field
		flex-shrink:0;
		min-width: 16px * 5
		min-height: $control_height
		line-height: $control_height
		font-size: 16px
		padding-right: 15px
		box-sizing: content-box
		white-space: nowrap
		text-align: right
	&-value
		position: relative
		min-height: $control_height
		width: 100%
		&>label.control
			.control
				margin-right: 5px
		&>.btn.sm
			margin-top: 4px
	&-error
		font-size: 13px
		font-weight: 500
		color: $color_red_5
		min-height: 20px
		line-height: 20px
		margin-top: 5px
	&-checkboxes
		display: flex
		.Checkbox+.Checkbox
			margin-left: 30px

/* 图片选择框
==================================================== */
.Form-upimg-default
	border: 1px solid transparent
	cursor: pointer
	height: 100px
	width: 100px
	background-color: darken($color_gray_1, 3%)
	&>.inner
		position: relative
		width: 96px
		height: 96px
		margin: 1px
		background: no-repeat center center
		background-size: cover
	&.active
		transition: all 0.15s ease-in-out
		.Form-upimg-default-place
			transition: all 0.15s ease-in-out
			opacity: 0
			&:before, &:after
				transition: all 0.15s ease-in-out
				box-shadow: 1px 1px 1px rgba(0,0,0,0.15)
		&:hover
			border-color: $color_red_3
			.Form-upimg-default-place
				opacity: 1
				background: rgba(255,255,255,0.5)
				&:before, &:after
					transform: rotate(45deg)
					background: $color_red_3
	&-place
		position: relative
		width: 100%
		height: 100%
		&:before, &:after
			position: absolute
			content: ""
			background: darken($color_gray_1, 15%)
		&:before
			width: 32px
			height: 2px
			top: 47px
			left: 32px
		&:after
			width: 2px
			height: 32px
			top: 32px
			left: 47px
	[type="file"]
		display: none
	&:hover
		border-color: darken($color_gray_1, 25%)
		.Form-upimg-default-place
			&:before, &:after
				background: darken($color_gray_1, 25%)

.Form-upimg-control
	display: flex
	.control
		flex: 1 0 0
		cursor: pointer
	.btn
		margin-left: 5px
	[type="file"]
		display: none

.Form-modifiers
	&>.item
		position: relative
		display: flex
		line-height: $control_height
		padding: 15px 10px
		border-bottom: 1px solid $color_gray_2
		&:first-child
			border-top: 1px solid $color_gray_2
	.item-field
		min-width: 98px
		font-weight: bold
	.item-value
		width: 100%
		flex: 1 0 0
		color: $color_gray_6
		word-break: break-all
		&-colorbar
			margin-top: 5px
			height: 30px
			line-height: 30px
			text-align: center
			color: #fff
			text-shadow: 1px 1px 0 rgba(0,0,0,0.3)
			border-radius: $borderRadius['sm']
	.item-content
		width: 100%
		flex: 1 0 0
		&>.inner
			display: flex
			align-items: flex-start
			.control
				flex: 1 0 0
			.btn
				margin-left: 8px
	.item-edit
		margin-left: 15px
		text-align: right
		user-select: none
