article, .is-article
	color: $color_gray_5
	font-size: 16px
	line-height: 1.8
	section
		margin-top: 2em
	h1, h2, h3, h4
		color: $color_gray_7
	h2
		margin-bottom: 8px
		padding: 8px 0
		border-bottom: 1px solid darken($color_gray_1, 5%)
	p
		margin-bottom: 1em
	ul, ol
		padding-left: 2em
		margin-bottom: 1em
	ul
		list-style: circle
	ol
		list-style: decimal
	li
		margin-top: 1em
		&:first-child
			margin-top: 0
		ul, ol
			margin-top: 1em
	img
		margin: 1em auto 0
		max-width: 95%
		box-shadow: 0px 0px 0px 4px rgba(60,90,20,0.05)
