article, .is-article
	color: $color_gray_5
	font-size: 16px
	line-height: 1.8
	section
		margin-top: 2em
	h1, h2, h3, h4
		position: relative
		color: $color_gray_7
		&:hover
			.article-h-link
				opacity: 1
	h2
		margin-bottom: 8px
		padding: 8px 0
		border-bottom: 1px solid darken($color_gray_1, 5%)
	p
		margin-bottom: 1em
	ul, ol
		padding-left: 2em
		margin-bottom: 1em
	ul
		list-style: circle
	ol
		list-style: decimal
	li
		margin-top: 1em
		&:first-child
			margin-top: 0
		ul, ol
			margin-top: 1em
	img
		margin: 1em auto 0
		max-width: 95%
		box-shadow: 0px 0px 0px 4px rgba(60,90,20,0.05)
	.article-h-link
		position: absolute
		content: ""
		top: 50%
		left: -24px
		display: block
		width: 24px
		height: 24px
		line-height: 24px
		margin-top: -12px
		font-size: 16px
		text-align: center
		opacity: 0
		cursor: pointer
