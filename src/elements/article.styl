body article, body .is-article
	min-height: 360px
	color: $color_gray_7
	font-size: 16px
	line-height: 1.8
	// font-family: "Noto Serif", serif
	section
		margin-top: 2em
	h1, h2, h3, h4
		position: relative
		color: $color_gray_9
		&:hover
			.article-h-link
				opacity: 1
	h2, h3, h4
		border-bottom: 1px solid darken($color_gray_1, 5%)
	h2
		margin-bottom: 8px
		padding: 8px 0
	h3, h4
		margin-bottom: 5px
		padding: 5px 0
	p
		margin-bottom: 1em
	ul, ol
		padding-left: 2em
		margin-bottom: 1em
	ul
		list-style: circle
	ol
		list-style: decimal
	li
		margin-top: 1em
		&:first-child
			margin-top: 0
		ul, ol
			margin-top: 1em
	figure
		figcaption
			background: rgba(60,90,20,0.05)
			box-shadow: 0px 0px 0px 4px rgba(60,90,20,0.05)
			margin-top: 8px
			padding-bottom: 4px
			line-height: 1.4
			font-size: 14px
	img
		margin: 1em auto 0
		box-shadow: 0px 0px 0px 4px rgba(60,90,20,0.05)
	blockquote
		line-height: 1.5
		padding-left: 15px
		margin-bottom: 1em
		color: $color_gray_5
		border-left: 3px solid $color_gray_3
		&>:first-child
			margin-top: 0
		&>:last-child
			margin-bottom: 0
	.article-h-link
		position: absolute
		content: ""
		top: 50%
		left: -24px
		display: block
		width: 24px
		height: 24px
		line-height: 24px
		margin-top: -12px
		font-size: 16px
		text-align: center
		opacity: 0
		cursor: pointer
