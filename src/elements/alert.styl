.Alert
	display: flex
	position: relative
	width: 100%
	padding: 1em
	color: $color_gray_7!important
	background-color: darken($color_gray_1, 2%)
	border-radius: $borderRadius['sm']
	&>.inner
		width: 100%
	&-close
		width: 20px
		height: 20px
		line-height: 20px
		font-size: 12px
		margin-left: 1em
		cursor: pointer
		opacity: 0.5
		&:hover
			opacity: 1
	&.sm
		font-size: 12px
		padding: 0.5em
		
	&-primary, &-success, &-warning, &-danger
		a
			color: inherit
			text-decoration underline
			&:hover
				text-decoration none
			
	&-primary
		background-color: darken($color_blue_1, 2%)
	&-success
		background-color: darken($color_green_1, 5%)
	&-warning
		background-color: darken($color_yellow_1, 5%)
	&-danger
		background-color: darken($color_red_1, 2%)
		
