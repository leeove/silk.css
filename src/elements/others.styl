.Separate-links
	white-space: nowrap
	a
		position: relative
		display: inline-block
		margin-left: 14px
		user-select: none
		&:before
			content: ""
			pointer-events: none
			position: absolute
			top: 50%
			left: -8px
			width: 2px
			height: 2px
			margin-top: -1px
			border-radius: 50%
			background: $color_gray_6
		&:first-child
			margin-left: 0!important
			&:before
				display: none

//单行省略
.Single-line
	overflow: hidden
	white-space: nowrap
	text-overflow: ellipsis
